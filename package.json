{
  "name": "streaming-test-framework",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "concurrently -n api,web -c green,cyan \"npm --prefix apps/api run dev\" \"npm --prefix apps/web run dev\"",
    "test": "playwright test",
    "test:smoke": "playwright test -g @smoke --project chromium",
    "test:api": "playwright test tests/api",
    "test:ui": "playwright test tests/ui",
    "test:playback": "playwright test tests/playback",
    "report": "playwright show-report",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "wait-on": "^7.2.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
